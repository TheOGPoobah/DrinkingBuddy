<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context="com.company.samsalvail.drinkingbuddy.LandingActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:text="Pick a Drink"
        android:id="@+id/pickDrink"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        style="@style/ButtonText"
        android:background="@drawable/googlebg"
        android:onClick="pickDrink" />

    <Button
        android:layout_width="160dp"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:text="Favourites"
        android:id="@+id/favs"
        android:layout_below="@+id/pickDrink"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/butnbg2"
        style="@style/ButtonText"
        android:onClick="favourite" />

    <Button
        android:layout_width="160dp"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:text="Add Drink"
        android:id="@+id/addDrink"
        android:layout_below="@+id/pickDrink"
        android:layout_alignRight="@+id/pickDrink"
        android:layout_alignEnd="@+id/pickDrink"
        android:background="@drawable/butnbg"
        style="@style/ButtonText"
        android:onClick="addDrink" />
</RelativeLayout>
